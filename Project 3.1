function ber = BER(seq, res)
li = length(seq);
err = 0;
for i = 1:li
    if seq(i) ~= res(i)
        err = err + 1;
    end
end
ber = err/li;
end


function demod_out= demod_BPSK(input)
iL = length(input);
demod = ones(1,iL);
input = real(input);
for i = 1:iL
    if input(i)> 0
        demod (1,i)  = 1;
    else
        demod (1,i)  = -1;
    end
    demod_out = demod;
end
end





